@page
@model CreateCountryModel
@{
    ViewData["Title"] = "Criar Pa√≠s";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form method="post" class="card p-4 shadow-sm">
        @for (var i = 0; i < Model.Countries.Count; i++)
        {
            <div class="d-flex align-items-start gap-3 mb-3">
                <div class="flex-grow-1">
                    <label asp-for="Countries[i].CountryName" class="form-label"></label>
                    <input asp-for="Countries[i].CountryName" class="form-control"/>
                    <span asp-validation-for="Countries[i].CountryName" class="text-danger"></span>
                </div>

                <div style="width: 200px;">
                    <label asp-for="Countries[i].CountryCode" class="form-label"></label>
                    <input asp-for="Countries[i].CountryCode" class="form-control"/>
                    <span asp-validation-for="Countries[i].CountryCode" class="text-danger"></span>
                </div>
            </div>
        }

        <button type="submit" class="btn align-self-end btn-primary">Cadastrar</button>
    </form>

    @if (Model.SubmittedCountries.Any())
    {
        <div class="alert alert-info mt-4">
            <ul class="mb-0">
                @foreach (var country in Model.SubmittedCountries)
                {
                    <li>@country.CountryCode - @country.CountryName</li>
                }
            </ul>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
